@using System.Collections.Immutable
@model QLHH.DAL.Model.Entity
@{
    ViewBag.Title = "Phiếu nhập";
    var listAttribute = Model.EntityAttributes.ToArray();
}


<form asp-controller="HangHoa" asp-action="PhieuNhap" method="post" class="form-horizontal">
    <h4>
        Tạo phiếu nhập
    </h4>
    <div asp-validation-summary="All" class="text-danger"></div>

    @for (int i = 0; i < listAttribute.Length; i++)
    {
        <div class="form-group">
            @Html.EditorFor(c => listAttribute[i], listAttribute[i].Attribute.AttributeType.AttributeTypeName, new { FieldName = $"EntityAttributes[{i}].EntityAttributeValue" })
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>
